@model ContactUsVm
<form class="request mat-card" id="TamasBaMaFormInContact" asp-action="TamasBaMaForm" method="post" asp-area=""
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-mode="replace"
      data-ajax-complete="endDeliveryInContact()"
      data-ajax-update="#TamasBaMaFormInContact">
    <h3 class="uk-margin-bottom">تماس با ما</h3>
    <p class="text-3">در صورت داشتن هر گونه پیشنهاد، سوال و یا راهنمایی، با ما در تماس باشید</p>
    <div class="fg-col">
        <label for="TelNo" class="fg-label">شماره تلفن</label>
        <input id="TelNo" name="TellNo" type="tel" class="entry" asp-for="TellNo" />
        <span class="text-danger" asp-validation-for="TellNo"></span>
    </div>
    <div class="fg-col">
        <label for="Name" class="fg-label">نام و نام خانوادگی</label>
        <input id="Name" name="Name" type="text" class="entry" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="fg-col">
        <label for="Message" class="fg-label">موضوع </label>
        <textarea id="Title" name="Title" class="entry" asp-for="Title"></textarea>
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="fg-col">
        <label for="Message" class="fg-label">پیغام شما</label>
        <textarea id="Message" name="Message" class="entry" asp-for="Message"></textarea>
        <span class="text-danger" asp-validation-for="Message"></span>
    </div>
    @*<div class="fg-col opacity-0">
            <label for="Message" class="fg-label">موضوع </label>
            <textarea id="Message" name="Message" class="entry" asp-for="Message"></textarea>
            <span class="text-danger" asp-validation-for="Message"></span>
        </div>*@
    <div class="rowr">
        <button class="btn btn-primary-gradient" onclick="LoadingRun('#TamasBaMaFormInContact')">ارسال پیام</button>
    </div>
</form>

<script>
    function endDeliveryInContact() {
        $("input").val("");
        $("textarea").val("");
        UIkit.notification('درخواست شما ثبت شد');
        LoadingEnd();
    }
</script>

