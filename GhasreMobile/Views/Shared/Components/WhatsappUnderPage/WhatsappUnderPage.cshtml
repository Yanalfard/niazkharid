@model TblConfig
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .whats-app {
        position: fixed;
        width: 50px;
        height: 50px;
        bottom: 40px;
        background-color: #25d366;
        color: #FFF;
        border-radius: 50px;
        text-align: center;
        font-size: 30px;
        box-shadow: 3px 4px 3px #999;
        right: 15px;
        z-index: 100;
    }

    .my-float {
        margin-top: 10px;
    }
</style>

<a class="whats-app" href="https://api.whatsapp.com/send?phone=@(Model.Value)" alt="قصر موبایل" target="_blank">
    <i class="fa fa-whatsapp my-float"></i>
</a>