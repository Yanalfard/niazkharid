@model DataLayer.Models.TblDelivery

@using GhasreMobile.Utilities

<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">
        جزئیات
    </h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div id="card-table" class="card-body flex-div">
        <div class="form-row ">
            <div class="form-group col-md-6">
                <label>نام:</label>
                <span>@Model.Name</span>
            </div>
            <div class="form-group col-md-6">
                <label>شماره:</label>
                <span>@Model.TellNo</span>
            </div>
            <div class="form-group col-md-6">
                <label>تاریخ ثبت:</label>
                <span>@Model.DateCreated.AllToShamsi()</span>
            </div>
            <div class="form-group col-md-6">
                <label>وضعیت: </label>
                @if (Model.IsAccepted)
                {
                    <span class="text-success">تایید شده</span>
                }
                else
                {
                    <span class="text-warning">تایید نشده</span>
                }
            </div>
            <div class="form-group col-12 mt-2">
                <label>ادرس:</label>
                <div class="bg-light p-3 uk-border-rounded">@Model.Address</div>
            </div>
            <div class="form-group col-12">
                <label>پیام:</label>
                <div class="bg-light p-3 uk-border-rounded">
                    @Model.Message
                </div>
            </div>
        </div>
    </div>
</div>