@model DataLayer.Models.TblDiscount
<div class="modal-header">
    <h6 class="modal-title" id="modalCenterTitle">
        افزودن کد تخفیف
    </h6>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="Create" asp-controller="Discount" asp-area="Admin"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-mode="replace"
      data-ajax-complete="EndCatagoryCreate()"
      data-ajax-update="#ajaxresult">
    <div class="modal-body">
        <div class="form-row">
            <div class="form-group col-md-6 col-lg-3">
                <label>نام</label>
                <input asp-for="Name" class="form-control form-control-sm" placeholder="مثال: noroz1400">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group col-md-6 col-lg-3">
                <label>چند روز</label>
                <input name="Till" required type="number" min="1" class="form-control form-control-sm" placeholder="مثال: 2">
                <span class="text-danger" asp-validation-for="ValidTill"></span>
            </div>
            <div class="form-group col-md-6 col-lg-3">
                <label>درصد تخفیف</label>
                <input asp-for="Discount" type="number" class="form-control form-control-sm" placeholder="مثال: 30">
                <span class="text-danger" asp-validation-for="Discount"></span>
            </div>
            <div class="form-group col-md-6 col-lg-3">
                <label>دفعات استفاده</label>
                <input asp-for="Count" type="number" class="form-control form-control-sm" placeholder="مثال: 10">
                <span class="text-danger" asp-validation-for="Count"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer justify-content-end">
        <button type="submit" class="btn btn-success btn-sm text-white">افزودن<span class="icon-holder uk-margin-small-right" uk-icon="add-circle-outline"></span></button>
    </div>
</form>

<script src="~/Validate/jquery.validate.min.js"></script>
<script src="~/Validate/jquery.validate.unobtrusive.js"></script>
